@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div ng-view></div>

@section Scripts
{
    <script type="text/javascript">
        var publicZone = angular.module('zone', [])
            .config(['$routeProvider', function ($routeProvider) {
                $routeProvider.
                    when('/home', { controller: null, templateUrl: '/Public/Home' }).
                    when('/about', { controller: null, templateUrl: '/Public/About' }).
                    when('/contact', { controller: null, templateUrl: '/Public/Contact' }).
                    otherwise({ redirectTo: '/home' });
            }]);

        //don't cache template URL results
        publicZone.run(function ($rootScope, $templateCache) {
            $rootScope.$on('$viewContentLoaded', function () {
                $templateCache.removeAll();
            });
        });

    </script>
}