    @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <fieldset id="socialLoginList">
            @foreach (AuthenticationClientData p in Model)
            {
                <button class="btn btn-large btn-success" type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">Sign in with @p.DisplayName</button>
            }
        </fieldset>
    }
</div>

